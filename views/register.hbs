<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="mt-3 text-center">Register</h1>
      <form action="/users/login" method="POST">
        <div class="form-group mb-3">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="name">
        </div>
        <div class="form-group mb-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="email">
        </div>
        <div class="form-group mb-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="password">
        </div>
        <div class="form-group mb-3">
          <label for="confirmpassword">Confirm Password</label>
          <input type="confirmpassword" id="confirmpassword" name="confirmpassword" class="form-control"
            placeholder="confirm password">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>
      <p class="lead mt-4">
        Have an account ? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>